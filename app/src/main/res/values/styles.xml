<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/turret_road_thick</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="profile_pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>

    <style name="card">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginHorizontal">6dp</item>
    </style>


    <style name="card_title">
        <item name="android:layout_width">234dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/turret_road_thick</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">2.5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>